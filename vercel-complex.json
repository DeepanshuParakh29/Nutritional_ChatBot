{
  "version": 2,
  "builds": [
    { 
      "src": "api/chat.py", 
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.9",
        "maxLambdaSize": "15mb"
      }
    }
  ],
  "routes": [
    { "src": "/api/chat", "dest": "api/chat.py" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ],
  "env": {
    "PYTHON_VERSION": "3.9"
  }
}
